{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "PUBLIC_TAURI_DEV=true npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "My-Passwords",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readFile": true
      },
      "clipboard": {
        "all": true
      },
      "dialog": {
        "ask": true,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://*.tobiashoelzer.de/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "de.tobiashoelzer.passwords",
      "macOS": {
        "exceptionDomain": "tobiashoelzer.de"
      },
      "resources": [],
      "shortDescription": "A hand-made easy-to-remember password generator and manager.",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "My-Passwords",
        "width": 1200,
        "decorations": true,
        "center": true,
        "titleBarStyle": "Overlay"
      }
    ]
  }
}
